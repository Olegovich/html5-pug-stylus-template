// arguments
sum()
  n = 0
  for num in arguments
    n = n + num

/* Footer */
.footer
  padding-top: unit(sum(1,2,3,4,5,20), px)
  padding-bottom: add(15px, 20)
  background: #0A0A0A

  &__inner-container
    display: flex
    align-items: center

  &__logo
    padding-left: 0

  &__logo-link
    display: block
    width: 230px
    text-decoration: none
    background: #fff
    transition: .3s
    &:hover
      opacity: .8
      text-decoration: none
    &:focus
      text-decoration: none
  &__logo-img
    width: 100%

  &__socials
    display: flex
    justify-content: center

  &__socials-item
    display: block
    margin: 0 15px
    & img
      max-width: 100%
      transform: none
      transition: .3s
    &:hover > img
      opacity: .7s
    & svg
      fill: green

  &__copyright
    padding-right: 0
    text-align: right

  &__copyright-text
    margin-bottom: 0
    font-family: 'Montserrat', sans-serif
    font-size: 14px
    color: #fff
