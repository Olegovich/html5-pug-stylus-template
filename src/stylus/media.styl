/* Media screens */

@media screen and (max-width: 1199px) 
  .header
    padding: 10px 0

    &.header-sticky
      display: none

    &__inner-container
      flex-flow: row wrap

    &__mobile-btn
      display: flex

    &__navbar
      display: none



@media screen and (max-width: 1100px)
  .modal
    &:before
      margin-right: -4px



@media screen and (max-width: 991px)
  .form
    &__input
      width: 280px
      margin: 15px 0 0

    &__input:first-child
      margin: 0

    &__submit-btn
      margin: 15px 0 0



@media screen and (max-width: 768px)
  .section-title
    font-size: 24px

  .footer
    &__inner-container
      flex-flow: row wrap
      justify-content: center

    &__logo
      padding-left: 15px

    &__socials
      justify-content: flex-end

    &__socials-item
      margin-right: 0

    &__copyright
      padding-right: 15px
      text-align: center
      width: 100%
      margin-top: 15px



@media screen and (max-width: 640px) 
  .header
    padding: 15px 0

    &__inner-container
      flex-direction: column

    &__logo-link
      display: flex
      justify-content: center
      margin: 0 auto

    &__call
      margin-top: 15px

    &__call-btn
      font-size: 15px



  .footer
    padding: 35px 0 30px

    &__logo
      width: 100%

    &__logo-link
      display: flex
      justify-content: center
      margin: 0 auto

    &__socials
      justify-content: center
      width: 100%
      margin-top: 23px

    &__socials-item
      margin-right: 15px

    &__copyright
      margin-top: 17px



@media screen and (max-width: 560px) 
  .modal
    &__dialog
      width: calc(100% - 45px)

    &__content
      padding: 35px 15px 40px

    &_success &__content, &_error &__content, &_attachment_success &__content
      padding: 38px 15px 37px



@media screen and (max-width: 420px) 
  .form, .modal-form
    &__input, &__textarea
      width: 100%

    &__submit-btn
      width: 100%
      padding: 12px 5px
      font-size: 14px

  .custom-select
    width: 100%